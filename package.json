{
  "name": "yagami",
  "description": "API for managing homeworks.",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "version": "1.0.0",
  "author": {
    "name": "fellipeutaka@gmail.com",
    "email": "fellipeutaka@gmail.com",
    "url": "https://fellipeutaka.vercel.app"
  },
  "scripts": {
    "build": "tsup",
    "start": "tsx --env-file=.env src/server.ts",
    "start:dev": "tsx watch --env-file=.env src/server.ts",
    "start:debug": "tsx watch --inspect-brk --env-file=.env src/server.ts",
    "start:prod": "node --env-file=.env .",
    "lint": "biome check",
    "vitest": "node --env-file=.env ./node_modules/vitest/vitest.mjs",
    "test": "pnpm vitest run --project unit",
    "test:all": "pnpm vitest run",
    "test:watch": "pnpm vitest --project unit",
    "test:cov": "pnpm vitest run --coverage",
    "test:debug": "pnpm vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "pnpm vitest run --project e2e",
    "test:e2e:watch": "pnpm vitest --project e2e",
    "type-check": "tsc",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma seed",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:check": "prisma validate",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:delete": "docker compose down -v"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@scalar/api-reference": "^1.34.6",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "prisma": "^5.14.0",
    "tsup": "^8.0.2",
    "tsx": "^4.10.5",
    "typescript": "^5.9.2",
    "ultracite": "5.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.1",
    "@prisma/client": "^5.14.0",
    "@scalar/fastify-api-reference": "^1.34.6",
    "argon2": "^0.40.1",
    "fastify": "^5.5.0",
    "fastify-zod-openapi": "^5.3.1",
    "ulidx": "^2.4.1",
    "zod": "^4.1.5"
  }
}
