{
  "name": "yagami",
  "description": "API for managing homeworks.",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "version": "1.0.0",
  "author": {
    "name": "fellipeutaka@gmail.com",
    "email": "fellipeutaka@gmail.com",
    "url": "https://fellipeutaka.vercel.app"
  },
  "scripts": {
    "build": "tsup",
    "start": "tsx --env-file=.env src/server.ts",
    "start:dev": "tsx watch --env-file=.env src/server.ts",
    "start:debug": "tsx watch --inspect-brk --env-file=.env src/server.ts",
    "start:prod": "node --env-file=.env .",
    "lint": "biome check --apply .",
    "test": "vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "node --env-file=.env ./node_modules/vitest/vitest.mjs run --dir src/http",
    "type-check": "tsc",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma seed",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:check": "prisma validate",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:delete": "docker compose down -v"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@scalar/api-reference": "^1.22.45",
    "@types/node": "^20.12.12",
    "prisma": "^5.14.0",
    "tsup": "^8.0.2",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.14.0",
    "@prisma/client": "^5.14.0",
    "@scalar/fastify-api-reference": "^1.22.45",
    "argon2": "^0.40.1",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "fastify-zod-openapi": "^1.2.0",
    "zod": "^3.23.8",
    "zod-openapi": "^2.17.0"
  }
}
